    private void jb_borrarMouseClicked(java.awt.event.MouseEvent evt) {                                       
        // TODO add your handling code here:
        int confirmar =JOptionPane.showConfirmDialog(null,"Desea eliminar el registro");
        if(JOptionPane.OK_OPTION==confirmar){ 
        try{
           int id_producto=Integer.parseInt(this.jtf_id_producto.getText());
           st.executeUpdate("delete * from productos where id_productos="+id_producto);
            JOptionPane.showMessageDialog(null,"Borrado");
           st.executeUpdate("delete * from productos");

       } catch(SQLException e){ 
            JOptionPane.showMessageDialog(null,"Error "+e.getMessage()); 
        } 

    } 
    }                                      

    private void jb_nuevoMouseClicked(java.awt.event.MouseEvent evt) {                                      
        // TODO add your handling code here:
        jp_registros.setEnabled(true);
        jp_movimientos.setEnabled(false);
        jb_borrar. setEnabled(false);
        jb_modificar.setEnabled(false);
        jb_guardar.setEnabled(true);
        jb_cancelar.setEnabled(true);
        int id_producto=0;
        String nombre_producto="";
        String marca="";
        int existencias=0;
        this.jtf_id_producto.setText(String.valueOf("id_producto"));                         
this.jtf_nombre_producto.setText(String.valueOf("nombre_producto"));             
this.jtf_marca.setText(String.valueOf("marca"));
this.jtf_existencias.setText(String.valueOf("existencias")); 
    }                                     

    private void jb_anteriorMouseClicked(java.awt.event.MouseEvent evt) {                                         
        // TODO add your handling code here:
        try{
            if(rs.isLast()==false){
                rs.previous();
                this.jtf_id_producto.setText(rs.getString("id_producto"));
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jtf_marca.setText(rs.getString("marca"));
                this.jtf_existencias.setText(rs.getString("existencias"));
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null,"Error"+e.getMessage());
        }
    }                                        

    private void jb_primeroMouseClicked(java.awt.event.MouseEvent evt) {                                        
        // TODO add your handling code here:
          try{
            if(rs.isLast()==false){
                rs.first();
                this.jtf_id_producto.setText(rs.getString("id_producto"));
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jtf_marca.setText(rs.getString("marca"));
                this.jtf_existencias.setText(rs.getString("existencias"));
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null,"Error"+e.getMessage());
        }
    }                                       

    private void jb_siguienteMouseClicked(java.awt.event.MouseEvent evt) {                                          
        // TODO add your handling code here:
           try{
            if(rs.isLast()==false){
                rs.next();
                this.jtf_id_producto.setText(rs.getString("id_producto"));
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jtf_marca.setText(rs.getString("marca"));
                this.jtf_existencias.setText(rs.getString("existencias"));
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null,"Error"+e.getMessage());
        }
    }                                         

    private void jb_ultimoMouseClicked(java.awt.event.MouseEvent evt) {                                       
        // TODO add your handling code here:
      try{
            if(rs.isLast()==false){
                rs.last();
                this.jtf_id_producto.setText(rs.getString("id_producto"));
                this.jtf_nombre_producto.setText(rs.getString("nombre_producto"));
                this.jtf_marca.setText(rs.getString("marca"));
                this.jtf_existencias.setText(rs.getString("existencias"));
            }
        }catch(Exception e){
            JOptionPane.showMessageDialog(null,"Error"+e.getMessage());
        }  
    }                                      

    private void jb_guardarMouseClicked(java.awt.event.MouseEvent evt) {                                        
        // TODO add your handling code here:
          try{ 
            int id_producto=Integer.parseInt(this.jtf_id_producto.getText());
            if(id_producto ==0){
            String nombre_producto=this.jtf_nombre_producto.getText(); 
            String marca=this.jtf_marca.getText(); 
            int existencias=Integer.parseInt(this.jtf_existencias.getText()); 

            st.executeUpdate("Insert into tabla1 (nombre_producto,marca,existencias)"+" values ('"+ nombre_producto +"','"+marca+"','"+existencias+"');"); 
            JOptionPane.showMessageDialog(null,"Guardado correctamente");
          }  

        } catch(Exception e)
        { 
            JOptionPane.showMessageDialog(null,"Error "+e.getMessage()); 
        } 
    }                                       

    private void jb_modificarMouseClicked(java.awt.event.MouseEvent evt) {                                          
        // TODO add your handling code here:
        jtf_id_producto.setEnabled(false);
        jtf_nombre_producto.setEnabled(true);
        jtf_marca.setEnabled(true);
        jtf_existencias.setEnabled(true);
    }                                         

    private void jb_cancelarMouseClicked(java.awt.event.MouseEvent evt) {                                         
        // TODO add your handling code here:
          jtf_id_producto.setEnabled(false);
          int confirmar =JOptionPane.showConfirmDialog(null,"Desea cancelar el registro?");
          if(JOptionPane.OK_OPTION==confirmar){
              jp_registros.setEnabled(false);
          }
    }                                        

